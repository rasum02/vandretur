<h4 id=@ID>@Title</h4>
<p>@Text</p>
<ul class="list-group">
  @for (int i=0; i<Items.Length; i++){
    <li class="list-group-item">
      <input class="form-check-input me-1" type="checkbox" value="" id=@(ID+i)>
      <label class="form-check-label stretched-link" for=@(ID+i)>First checkbox</label>
    </li>
  }
</ul>


@code{
  [Parameter] 
  public string Text {get;set;} = "Not set";
  [Parameter] 
  public string Title {get;set;} = "Title not set";
  [Parameter]
  public string ID {get;set;} = "";
  [Parameter]
  public string[] Items {get;set;} = new string[3];

  private bool Check = true;
  private void ToggleCheck(){
    Check = !Check;
  }
}
